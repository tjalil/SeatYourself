<%= form_for @user do |f| %>
  
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %>  

  <%= f.label :email %><br>
  <%= f.text_field :email %>  

  <%= f.label :password %><br>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation %><br>
  <%= f.text_field :password_confirmation %>

  <%= f.submit "Submit" %>

<% end %>