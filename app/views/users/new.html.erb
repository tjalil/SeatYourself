<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id = "error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user account from being created
      </h2>
      <ul>
        <% @users.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class = "field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>

  <div class = "field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>  
  </div>

  <div class = "field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>  

  <div class = "field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class = "field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class = "actions">
    <%= f.submit "Submit" %>
  </div>

<% end %>